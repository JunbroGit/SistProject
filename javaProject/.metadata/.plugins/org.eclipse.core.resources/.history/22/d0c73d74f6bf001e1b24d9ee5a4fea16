package themProject;

import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

import day0131.ShopAddForm;
import day0131.ShopListForm;

public class EmployeeMain extends JFrame implements ActionListener{

	JButton btnAdd,btnDel,btnUpdate,btnList;
	
	public EmployeeMain() {
		super("EmloyMain");
		this.setBounds(200, 100, 400, 400);
		initDesign();
		this.setVisible(true);
	}
	
	public void initDesign()
	{
		this.setLayout(new GridLayout(2, 2));
		btnAdd=new JButton("사원등록");
		btnDel=new JButton("사원관리");
		btnUpdate=new JButton("사원정보수정");
		btnList=new JButton("사원조회");
		
		this.add(btnAdd);
		this.add(btnDel);
		this.add(btnUpdate);
		this.add(btnList);
		
		//이벤트
		btnAdd.addActionListener(this);
		btnDel.addActionListener(this);
		btnUpdate.addActionListener(this);
		btnList.addActionListener(this);
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		Object ob=e.getSource();
		
		if(ob==btnAdd)
		{
			System.out.println("add");
		}else if(ob==btnDel)
		{
			System.out.println("del");
		}else if(ob==btnUpdate)
		{
			System.out.println("update");
		}else if(ob==btnList)
		{
			System.out.println("list");
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		new EmployeeMain();
	}

}
